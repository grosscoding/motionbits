---
/**
 * CountUp component - Animates a number counting up or down
 * 
 * @prop {number} from - Starting value for the animation
 * @prop {number} to - Ending value for the animation
 * @prop {string} direction - Direction of counting: 'up' or 'down'
 * @prop {number} delay - Delay before animation starts (in seconds)
 * @prop {number} duration - Duration of the animation (in seconds)
 * @prop {string} separator - Character to use as thousands separator
 * @prop {string} className - Additional CSS classes to apply
 */

interface Props {
  from?: number;
  to: number;
  direction?: 'up' | 'down';
  delay?: number;
  duration?: number;
  separator?: string;
  className?: string;
}

const { 
  from = 0, 
  to, 
  direction = 'up',
  delay = 0,
  duration = 2,
  separator = '',
  className = '' 
} = Astro.props;
---

<count-up 
  class={className}
  from={from}
  to={to}
  direction={direction}
  delay={delay}
  duration={duration}
  separator={separator}
></count-up>

<script>
  // Import the web component
  import '../js-components/text-animations/count-up.js';
</script>
